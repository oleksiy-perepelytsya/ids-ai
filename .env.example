# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Whitelist (comma-separated Telegram user IDs)
ALLOWED_TELEGRAM_USERS=12345,67890

# LLM API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Model Configuration
# Default models (change if needed)
GEMINI_MODEL=gemini-2.0-flash
CLAUDE_MODEL=claude-sonnet-4-20250514

# Alternative Gemini models:
# GEMINI_MODEL=gemini-1.5-flash
# GEMINI_MODEL=gemini-1.5-pro
# GEMINI_MODEL=gemini-2.0-flash-thinking-exp-1219

# Storage Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DB=ids
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
REDIS_URL=redis://redis:6379

# Behavior Configuration
ROUND_LOGGING=true
MAX_ROUNDS=3
MAX_ITERATIONS=10

# Agent Execution Mode (for 429 rate limit errors, use sequential)
# PARALLEL_AGENTS=false = sequential (default, avoids rate limits)
# PARALLEL_AGENTS=true = parallel (faster, needs higher API quota)
# SEQUENTIAL_AGENTS=true = alternative way to force sequential (overrides PARALLEL_AGENTS)
PARALLEL_AGENTS=false
# SEQUENTIAL_AGENTS=true
AGENT_DELAY_SECONDS=2.0

# Claude Code Integration
# Requires 'claude' CLI installed and authenticated on the host
CLAUDE_CODE_ENABLED=true
CLAUDE_CODE_MODEL=sonnet
CLAUDE_CODE_MAX_TURNS=10

# Projects Root (where user projects are located)
PROJECTS_ROOT=/projects

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Default Project Context
DEFAULT_PROJECT=general
